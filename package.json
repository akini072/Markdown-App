{
  "name": "@uiwjs/react-markdown-editor",
  "version": "1.0.0",
  "description": "A markdown editor with preview, implemented with React.js and TypeScript.",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "esnext": "esnext/index.js",
  "files": [
    "lib/",
    "esm/",
    "esnext/"
  ],
  "types": "cjs/index.d.ts",
  "typings": "cjs/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run compile:esm -- --watch && npm run compile:cjs -- --watch && npm run compile:esnext -- --watch",
    "compile": "npm run compile:esm && npm run compile:cjs && npm run compile:esnext",
    "compile:esm": "tsc -p ./src",
    "compile:cjs": "tsc -p ./src -m commonjs --outDir cjs",
    "compile:esnext": "tsc -p ./src -t esnext --outDir esnext",
    "doc": "npm run doc:dev",
    "doc:dev": "NODE_ENV=development parcel website/index.html --out-dir doc --no-cache",
    "doc:build": "rimraf doc && NODE_ENV=production parcel build website/index.html --out-dir doc --public-url ./ --no-cache --no-source-maps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uiwjs/react-markdown-editor"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.7.0",
    "react-dom": ">=16.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^24.0.11",
    "@types/prop-types": "^15.7.0",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@uiw/reset.css": "^1.0.1",
    "autoprefixer": "^9.5.0",
    "less": "^3.9.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-markdown-string": "^1.3.4",
    "postcss-modules": "^1.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "react-markdown": "^4.0.6"
  }
}
