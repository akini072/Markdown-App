{
  "name": "@uiw/react-markdown-editor",
  "version": "1.2.0",
  "description": "A markdown editor with preview, implemented with React.js and TypeScript.",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "watch": "npm run watch:types & npm run watch:ts",
    "build": "npm run build:ts & npm run build:types",
    "watch:types": "npm run build:types -- --watch",
    "build:types": "tsbb types --outDir typings --target ESNEXT",
    "watch:ts": "tsbb watch --target react",
    "build:ts": "tsbb build --target react",
    "build:umd": "tsbb build --target react --env-name umd",
    "deploy": "gh-pages -d doc",
    "doc": "npm run doc:build",
    "doc:dev": "NODE_ENV=development parcel website/index.html --out-dir doc --no-cache",
    "doc:build": "NODE_ENV=production parcel build website/index.html --out-dir doc --public-url ./ --no-cache --no-source-maps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uiwjs/react-markdown-editor"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.7.0",
    "react-dom": ">=16.7.0"
  },
  "babel": {
    "env": {
      "umd": {
        "presets": [
          "@tsbb/babel-preset-tsbb",
          "@babel/preset-react"
        ],
        "plugins": [
          [
            "babel-plugin-transform-remove-imports",
            {
              "test": "(less|css)$"
            }
          ],
          [
            "@babel/plugin-transform-modules-umd",
            {
              "exactGlobals": true
            }
          ]
        ]
      }
    }
  },
  "files": [
    "lib",
    "typings"
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "codemirror": "^5.45.0",
    "gh-pages": "^2.0.1",
    "highlight.js": "^9.15.6",
    "react-markdown": "^4.0.6"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-umd": "^7.2.0",
    "@types/classnames": "^2.2.7",
    "@types/codemirror": "0.0.72",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^24.0.11",
    "@types/prop-types": "^15.7.0",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@uiw/reset.css": "^1.0.3",
    "autoprefixer": "^9.6.1",
    "babel-plugin-transform-remove-imports": "^1.0.8",
    "less": "^3.9.0",
    "marked": "^0.7.0",
    "parcel-bundler": "^1.12.3",
    "postcss-modules": "^1.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "tsbb": "^1.0.8"
  }
}
